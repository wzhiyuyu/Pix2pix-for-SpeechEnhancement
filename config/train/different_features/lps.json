{
    "name": "lps",
    "seed": 0,
    "description": "pix2pix",
    "save_location": "/media/imucs/DataDisk/haoxiang/Experiment/Pix2pix-for-Speech-Enhancement/different_features",
    "n_gpu": 1,
    "use_cudnn": true,
    "feature": "lps",
    "generator_model": {
        "module": "models.pix2pix_model_sn",
        "main": "Generator",
        "args": {
            "n_filters_first": 64,
            "n_downsamplings_blocks": 8
        }
    },
    "discriminator_model": {
        "module": "models.pix2pix_model_sn",
        "main": "Discriminator",
        "args": {
            "use_bn_in_last_layer": true
        }
    },
    "loss_function": {
        "module": "models.loss",
        "main": "mse_loss",
        "args": {}
    },
    "optimizer": {
        "G_lr": 0.0002,
        "D_lr": 0.0002,
        "beta1": 0.5
    },
    "trainer": {
        "epochs": 1000,
        "save_period": 10,
        "validation_period": 10,
        "additional_loss_factor": 20,
        "adversarial_loss_factor": 1,
        "soft_label": true,
        "iter_discriminator_period": 1
    },
    "train_dataset": {
        "module": "data.lps_train_dataset",
        "main": "TrainDataset",
        "args": {
            "mixture_dataset": "/media/imucs/DataDisk/haoxiang/Release/speech_enhancement/Pix2pix/20190605_pix2pix_train-284-lps_test-67-waveform/train/mixture.pkl",
            "clean_dataset": "/media/imucs/DataDisk/haoxiang/Release/speech_enhancement/Pix2pix/20190605_pix2pix_train-284-lps_test-67-waveform/train/clean.pkl",
            "limit": null,
            "offset": 0,
            "apply_normalization": 2
        }
    },
    "validation_dataset": {
        "module": "data.lps_test_dataset",
        "main": "TestDataset",
        "args": {
            "mixture_dataset": "/media/imucs/DataDisk/haoxiang/Release/speech_enhancement/Pix2pix/20190605_pix2pix_train-284-lps_test-67-waveform/test/mixture.pkl",
            "clean_dataset": "/media/imucs/DataDisk/haoxiang/Release/speech_enhancement/Pix2pix/20190605_pix2pix_train-284-lps_test-67-waveform/test/clean.pkl",
            "limit": 80,
            "offset": 0,
            "apply_normalization": 2
        }
    },
    "train_dataloader": {
        "shuffle": true,
        "num_workers": 40,
        "batch_size": 80
    },
    "validation_dataloader": {
        "num_workers": 40,
        "batch_size": 40
    }
}